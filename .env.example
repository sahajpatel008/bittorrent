# BitTorrent Client Configuration Example
# Copy this file to application.properties in src/main/resources/ and customize

# Spring Boot Server Port
server.port=8080

# BitTorrent Peer ID (20 characters/bytes) - identifies your client
# You can change this to any 20-character string
bittorrent.peer-id=42112233445566778899

# Port to listen on for incoming peer connections (default BitTorrent port is 6881)
bittorrent.listen-port=6881

# Directory where downloaded files are saved
bittorrent.download-dir=./downloads

# Maximum number of simultaneous peer connections
bittorrent.max-connections=50

# Upload/Download rate limits in bytes per second (-1 for unlimited)
bittorrent.max-upload-rate=-1
bittorrent.max-download-rate=-1

# Tracker connection timeout in milliseconds
bittorrent.tracker-timeout=30000

# Default tracker re-announce interval in seconds
bittorrent.tracker-interval=1800

# Logging level (TRACE, DEBUG, INFO, WARN, ERROR)
logging.level.bittorrent=INFO
